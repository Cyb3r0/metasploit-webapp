<!DOCTYPE html>
<html lang="en">
<head>
	<% include ./partials/head %>
</head>
<body class="container">
	<header>
		<% include ./partials/header %>
	</header>

	<main>
		<div class="col-lg-12">
	        <ol class="breadcrumb">
	        	<li><a href="#">Metasploit App</a></li>
	        	<li class="active">Workspace</li>
	        </ol>
	        <a href="/workspaces/new" class="btn btn-primary">Create..</a>
	        <table class="table table-hover">
	        	<thead>
	        		<tr>
	        		<th>#</th>
	        		<th>Project Name</th>
	        		<th>Description</th>
	        		<th>Updated at</th>
	        		<th>Operation</th>
		        	</tr>
		        </thead>

		        <tbody>
		        	<% workspaces.forEach(function(workspace) { %>
		        	<tr>
		        		<td><%= workspace.id %></td>
		        		<td>
		        			<a href="workspaces/<%= workspace.id%>">
		        				<%= workspace.name %>
		        			</a>
		        		</td>
		        		<td><%= workspace.description%></td>
		        		<td><%= workspace.updated_at%></td>
		        		<td>
		        			<a href="workspaces/<%= workspace.id %>/edit" class="btn btn-warning">Edit</a>
		        			<a href="workspaces/<%= workspace.id %>/delete" class="btn btn-danger">Delete</a>
		        		</td>
		        	</tr>
		        	<%	}) %>
	        	</tbody>
	        </table>
        </div>
    </main>

    <footer>
        <% include ./partials/footer %>
    </footer>

</body>
</html>